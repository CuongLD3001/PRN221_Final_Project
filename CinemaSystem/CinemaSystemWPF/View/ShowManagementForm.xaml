<Window x:Class="CinemaSystemLibrary.Views.ShowManagementForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Show Management" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" Grid.Row="0" Content="Back" Click="BackToMenu_Click"></Button>
       

        <Label Grid.Row="1" Grid.Column="0" Content="Room:" />
        <ComboBox Grid.Row="1" Grid.Column="1" x:Name="cboRoom" Width="200" Loaded="cboRoom_Loaded" />
        <Label Grid.Row="2" Grid.Column="0" Content="Slot:" />
        <ComboBox Grid.Row="2" Grid.Column="1" x:Name="cboSlot" Width="200" Loaded="cboSlot_Loaded" />

        <Label Grid.Row="3" Grid.Column="0" Content="Film:" />
        <ComboBox Grid.Row="3" Grid.Column="1" x:Name="cboFilm" Width="200" Loaded="cboFilm_Loaded" />

        <Label Grid.Row="4" Grid.Column="0" Content="Show Date:" />
        <DatePicker Grid.Row="4" Grid.Column="1" x:Name="dpShowDate" Width="200" />

        <Label Grid.Row="5" Grid.Column="0" Content="Price:" />
        <TextBox Grid.Row="5" Grid.Column="1" x:Name="txtPrice" Width="200" />

        <Label Grid.Row="6" Grid.Column="0" Content="Status:" />
        <TextBox Grid.Row="6" Grid.Column="1" x:Name="txtStatus" Width="200" />


        <Label Grid.Row="7" Grid.Column="0" Content="ShowID:" />
        <TextBox Grid.Row="7" Grid.Column="1" x:Name="txtShowId" Width="200" IsReadOnly="true" />

        <Button Grid.Row="8" Grid.Column="0" x:Name="btnAddShow" Grid.ColumnSpan="2" Content="Add Show" Click="AddShow_Click" />

        <Button Grid.Row="9" Grid.Column="0" x:Name="btnUpdateShow" Grid.ColumnSpan="2" Content="Update Show" Click="UpdateShow_Click" />

        <Button Grid.Row="10" Grid.Column="0" x:Name="btnDeleteShow" Grid.ColumnSpan="2" Content="Delete Show" Click="DeleteShow_Click" />

        <DataGrid Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="2" x:Name="dgShows" AutoGenerateColumns="True" SelectionChanged="dgShows_SelectionChanged" />

        <!-- Đặt các Control khác tại đây nếu cần -->

    </Grid>
</Window>
